var v = sum(13, 44, 234, 1, 3);

function sum(numbers...){ // variable arguments
   var sum = 0;
   
   for(var number in numbers){
      sum += number;
   }
   return sum;
}


println(v);

class T {
   var a;
   var b;
   
   new(m){
      this.a = m.a;
      this.b = m.b;
   }
   
   toString(){
      return "${a} ${b}";
   }
}

